<!-- vue pour le formulaire ajout de taches-->
<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ajout de taches</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"
          integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
</head>
    <body>
        <section class="container">
            <h1 class="text-center pb-5 pt-5">Veuillez Saisir les tachees Ã  ajouter</h1>
            <div class="col-md-6 offset-md-3">
                <form action="save" method="post">
                    <div class="form-group">
                        <label for="nom">Nom de la tache</label>
                        <input type="text" name="nom" id="nom" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="commentaire">Votre commentaire</label>
                        <textarea name="commentaire" id="commentaire" cols="30" rows="10" class="form-control"></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit">ajouter</button>
                    <button class="btn btn-danger" type="reset">Reset Formulaire</button>
                    <a href="http://localhost:3015/tache" class="btn btn-info">Retour accueil</a>
                </form>
            </div>
        </section>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"
                integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    </body>
</html>